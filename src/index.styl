@import url('https://fonts.googleapis.com/css2?family=Merriweather:wght@300&display=swap');

body
    #root
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        margin: 0
        display: flex
        flex-direction: column
        align-content: center
        justify-content: center
        background: white


.content
    display: flex
    align-content: center
    justify-content: center
    flex-direction: column
    align-items: center
    background: #fbdada
    h1
        font-family: 'Merriweather', serif

@keyframes popup
    60%
        transform: scale(1.0)
    100%
        transform: scale(1.2)

svg
    path
        transform-origin: center
        fill: red
    animation: popup 1s ease alternate infinite
    